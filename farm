  <script>
    // --- Helpers
    const $ = (id) => document.getElementById(id);
    const toast = (msg) => {
      const t = $("toast");
      t.textContent = msg;
      t.style.display = "block";
      clearTimeout(window.__toastT);
      window.__toastT = setTimeout(() => (t.style.display = "none"), 2600);
    };

    // --- Fake countdown that resets daily at 23:59:59
    function updateCountdown(){
      const now = new Date();
      const end = new Date();
      end.setHours(23,59,59,999);
      const diff = Math.max(0, end - now);

      const s = Math.floor(diff/1000);
      const days = Math.floor(s / 86400);
      const hrs  = Math.floor((s % 86400) / 3600);
      const mins = Math.floor((s % 3600) / 60);
      const secs = s % 60;

      $("d").textContent = String(days).padStart(2,"0");
      $("h").textContent = String(hrs).padStart(2,"0");
      $("m").textContent = String(mins).padStart(2,"0");
      $("s").textContent = String(secs).padStart(2,"0");
    }
    setInterval(updateCountdown, 250);
    updateCountdown();

    // --- Fake sales counter
    let sold = 1337;
    function bumpSold(){
      sold += Math.random() < 0.65 ? 1 : 0;
      $("sold").textContent = sold.toLocaleString("fr-FR");
    }
    setInterval(bumpSold, 900);

    // --- Buttons actions (no payments)
    function cta(){
      toast("ğŸš« Parodie : aucun achat ici. Mais ton mindset est dÃ©jÃ  au top.");
      document.querySelector("header.hero").scrollIntoView({behavior:"smooth"});
    }

    $("btnCTA").onclick = cta;
    $("btnMain").onclick = () => toast("âœ… Place rÃ©servÃ©e (dans ton imagination).");
    $("btnBuy").onclick  = () => toast("ğŸ’³ Paiement annulÃ© : ce site est une blague (heureusement).");
    $("btnLater").onclick= () => toast("ğŸ§  RÃ©flÃ©chir câ€™est dÃ©jÃ  Ãªtre riche (selon certains).");
    $("btnFree").onclick = () => toast("ğŸ Le gratuit : respire, bois de lâ€™eau, et fais un vrai projet.");
    $("btnProof").onclick= () => toast("ğŸ“ˆ Preuves : captures dâ€™Ã©cran floues (parodie).");

    $("year").textContent = new Date().getFullYear();
  </script>
